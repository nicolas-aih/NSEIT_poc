@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@using System.Data;
@{
    DataTable objStates = PortalApplication.States;
}
<style>
    .mymargin {
        margin: 5px;
    }
</style>
@*@Scripts.Render("~/js/app/branches")*@
<script src="~/js/app/branches.js" type="text/javascript"></script>

<div id="pnlMain" class="notificationBox">
    <h3>Corporate Agent - Branch Offices</h3>
    <div class="row  mt10">
        <div class="col-sm-12">
            <div class="col-sm-12" style="background-color:lightgray"><H4>Upload File :</H4></div>
        </div>
    </div>
    <div class="row mt10">
        <div class="col-sm-12">
            <form id="frmUploadMain" method="post" autocomplete="off">
                <div class="row mt10">
                    <div class="col-sm-9">
                        <label><a href="~/UploadTemplates/BranchDetailsBulkUploadTemplate.xlsx">Download Template</a></label>
                    </div>
                </div>
                <div class="row mt10">
                    <div class="col-sm-9 form-group">
                        <label for="txtFile">Select File : <span class="mandatory">*</span></label>
                        <input id="txtFile" name="txtFile" type="file" class="form-control" required />
                    </div>
                    <div class="col-sm-3 form-group" style="vertical-align:bottom">
                        <label>&nbsp;<span class="mandatory">&nbsp;</span></label>
                        <input type="Submit" class="btn btn-md btn-warning btn-block" value="Upload" />
                    </div>
                </div>
                <div class="row mt10">
                    <div class="col-sm-9" id="ResponseFile">

                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="row  mt10">
        <div class="col-sm-12">
            <div class="col-sm-12" style="background-color:lightgray"><H4>I prefer entering details :</H4></div>
        </div>
    </div>
    <div class="row mt10">
        <div class="col-sm-12">
            <form id="frmMain" method="post" action="../Home/Branches" autocomplete="off">
                <div class="row mt10">
                    <div class="col-sm-6 form-group">
                        <label for="txtBranchCode">Branch Code : <span class="mandatory">*</span></label>
                        <input id="txtBranchCode" name="txtBranchCode" type="text" class="form-control" required maxlength="50" autocomplete="off" />
                    </div>
                    <div class="col-sm-6 form-group">
                        <label for="txtBranchName">Branch Name : <span class="mandatory">*</span></label>
                        <input id="txtBranchName" name="txtBranchName" type="text" class="form-control" required maxlength="100" autocomplete="off" />
                    </div>
                </div>
                <div class="row mt10">
                    <div class="col-sm-6 form-group">
                        <label for="txtBranchAddress">Address : <span class="mandatory">*</span></label>
                        <input id="txtBranchAddress" name="txtBranchAddress" type="text" class="form-control" required maxlength="512" autocomplete="off" />
                    </div>
                    <div class="col-sm-6 form-group">
                        <label for="txtPlace">Place : <span class="mandatory">*</span></label>
                        <input id="txtPlace" name="txtPlace" type="text" class="form-control" required maxlength="50" autocomplete="off" />
                    </div>
                </div>
                <div class="row mt10">
                    <div class="col-sm-6 form-group">
                        <label for="cboStates">Select State : <span class="mandatory">*</span></label>
                        <select id="cboStates" name="cboStates" class="form-control">
                            <option value="">Select</option>
                            @foreach (DataRow dr in objStates.Rows)
                            {
                                <option value="@dr["state_id"]">@dr["state_name"]</option>
                            }
                        </select>
                    </div>
                    <div class="col-sm-6 form-group">
                        <label for="cboDistricts">Select District : <span class="mandatory">*</span></label>
                        <select id="cboDistricts" name="cboDistricts" class="form-control"></select>
                    </div>
                </div>
                <div class="row mt10">
                    <div class="col-sm-6 form-group">
                        <label for="cboIsActive">Is Active ?: <span class="mandatory">*</span></label>
                        <select id="cboIsActive" name="cboIsActive" class="form-control">
                            <option value="">Select</option>
                            <option value="ACTIVE">ACTIVE</option>
                            <option value="INACTIVE">INACTIVE</option>
                        </select>
                    </div>
                </div>
                <div class="row mt10">
                    <div class="col-sm-4 form-group">
                        <input type="submit" class="btn btn-md btn-warning btn-block" value="Save">
                    </div>
                </div>
                <div class="row mt10">
                    <div id="data" class="col-sm-9">
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
