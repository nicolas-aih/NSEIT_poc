
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@if (! PortalSession.RoleCode.In(new string[] { "BR", "CA", "WA", "IMF", "I" }))
{
    <script src="~/js/app/creditbalance.js" type="text/javascript"></script>
}

<div id="pnlMain" class="notificationBox">
    <h3>Credit Balance</h3>
    <div class="row mt10">
        <div class="col-sm-12">
            @if (PortalApplication.IntegrationMode == "CSS")
            {
                if (@PortalSession.RoleCode.In(new string[] { "BR", "CA", "WA", "IMF", "I" }))
                {
                    <div class="col-sm-12">
                        @ViewBag.Output
                    </div>
                }
                else
                {
                    <form id="frmMain" method="post" autocomplete="off">
                        <div class="row mt10">
                            <div class="col-sm-3 form-group">
                                <label for="cboCompanyType">Company Type : <span class="mandatory">*</span></label>
                                <Select id="cboCompanyType" name="cboCompanyType" class="form-control" required>
                                    <option value="">--Select--</option>
                                    <option value="I">Insurer</option>
                                    <option value="CA">Corporate Agent</option>
                                    <option value="WA">Web Aggregator</option>
                                    <option value="IMF">Insurance Marketing Firm</option>
                                    <option value="BR">Insurance Broker</option>
                                </Select>
                            </div>
                            <div class="col-sm-6 form-group">
                                <label for="cboCompany">Company Name: <span class="mandatory">*</span></label>
                                <select id="cboCompany" name="cboCompany" class="form-control" required></select>
                            </div>
                            <div class="col-sm-3 form-group">
                                <label>&nbsp;<span class="mandatory">&nbsp;</span></label>
                                <input id="butSubmit" type="submit" class="btn btn-md btn-warning btn-block" value="Get Data">
                            </div>
                        </div>
                        <div class="row mt10">
                            <div id="data" class="col-sm-9">
                            </div>
                        </div>
                    </form>
                }
            }
            else //OAIMS
            {
                if (@PortalSession.RoleCode.In(new string[] { "BR", "CA", "WA", "IMF", "I" }))
                {
                    <div class="col-sm-12">
                        @ViewBag.Output
                    </div>
                }
                else
                {
                    <form id="frmMain" method="post" autocomplete="off">
                        <div class="row mt10">
                            <div class="col-sm-3 form-group">
                                <label for="cboCompanyType">Company Type : <span class="mandatory">*</span></label>
                                <Select id="cboCompanyType" name="cboCompanyType" class="form-control" required>
                                    <option value="">--Select--</option>
                                    <option value="I">Insurer</option>
                                    <option value="CA">Corporate Agent</option>
                                    <option value="WA">Web Aggregator</option>
                                    <option value="IMF">Insurance Marketing Firm</option>
                                    <option value="BR">Insurance Broker</option>
                                </Select>
                            </div>
                            <div class="col-sm-6 form-group">
                                <label for="cboCompany">Company Name: <span class="mandatory">*</span></label>
                                <select id="cboCompany" name="cboCompany" class="form-control" required></select>
                            </div>
                            <div class="col-sm-3 form-group">
                                <label>&nbsp;<span class="mandatory">&nbsp;</span></label>
                                <input type="submit" class="btn btn-md btn-warning btn-block" value="Get Data">
                            </div>
                        </div>
                        <div class="row mt10">
                            <div id="data" class="col-sm-9">
                            </div>
                        </div>
                    </form>
                }
            }
        </div>
    </div>
</div>
