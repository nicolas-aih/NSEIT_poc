@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@*@Scripts.Render("~/js/app/newvoucherentry")*@
<script src="~/js/app/newvoucherentry.js" type="text/javascript"></script>
<div id="pnlMain" class="notificationBox">
    <h3>New Entry</h3>
    <div class="row mt10">
        <div class="col-sm-12">
            <form id="frmMain" method="post" autocomplete="off">
                @if (@PortalSession.RoleCode == "BO")
                {
                    <div class="row mt10">
                        <div class="col-sm-3 form-group">
                            <label for="cboCompanyType">Company Type : <span class="mandatory">*</span></label>
                            <Select id="cboCompanyType" name="cboCompanyType" class="form-control" required>
                                <option value="">--Select--</option>
                                <option value="I">Insurer</option>
                                <option value="CA">Corporate Agent</option>
                                <option value="WA">Web Aggregator</option>
                                <option value="IMF">Insurance Marketing Firm</option>
                                <option value="BR">Insurance Broker</option>
                            </Select>
                        </div>
                        <div class="col-sm-6 form-group">
                            <label for="cboCompany">Company Name: <span class="mandatory">*</span></label>
                            <select id="cboCompany" name="cboCompany" class="form-control" required></select>
                        </div>
                    </div>
                }
                <div class="row mt10">
                    <div class="col-sm-4 form-group">
                        <label for="txtDateOfPayment">Date of Transaction : <span class="mandatory">*</span></label>
                        <input type="text" id="txtDateOfPayment" name="txtDateOfPayment" class="form-control dtpick" readonly="readonly" style="cursor:pointer; background-color:white;" autocomplete="off" />
                    </div>
                    <div class="col-sm-4 form-group">
                        <label for="cboInstructionType">Transaction Type : <span class="mandatory">*</span></label>
                        @if (@PortalSession.RoleCode == "BO")
                        {
                            <Select id="cboInstructionType" name="cboInstructionType" class="form-control" required>
                                <option value="C">Credit</option>
                                <option value="D">Debit</option>
                            </Select>
                        }
                        else
                        {
                            <input type="text" class="form-control" required value="Credit" disabled="disabled" autocomplete="off" />
                            <input type="hidden" id="cboInstructionType" name="cboInstructionType" value="C">
                        }
                    </div>
                </div>
                <div class="row mt10">
                    <div class="col-sm-4 form-group">
                        <label for="txtReferenceNo">Reference Number : <span class="mandatory">*</span></label>
                        <input id="txtReferenceNo" name="txtReferenceNo" type="text" class="form-control" required maxlength="50" autocomplete="off" />
                    </div>
                    <div class="col-sm-4 form-group">
                        <label for="cboModeOfPayment">Mode of Payment : <span class="mandatory">*</span></label>
                        <select id="cboModeOfPayment" name="cboModeOfPayment" type="text" class="form-control" required autocomplete="off">
                            <option value="NEFT">NEFT</option>
                            <option value="RTGS">RTGS</option>
                            <option value="IMPS">IMPS</option>
                            <option value="CHEQUE">Cheque</option>
                            <option value="DD">Demand Draft</option>
                        </select>
                    </div>
                </div>
                <div class="row mt10">
                    <div class="col-sm-4 form-group">
                        <label for="txtAmount">Amount : <span class="mandatory">*</span></label>
                        <input id="txtAmount" name="txtAmount" type="text" class="form-control" required maxlength="13" autocomplete="off" />
                    </div>
                </div>
                <div class="row mt10">
                    <div class="col-sm-9 form-group">
                        <label for="txtRemarks">Remarks : <span class="mandatory">*</span></label>
                        <input type="text" id="txtRemarks" name="txtRemarks" class="form-control" autocomplete="off" maxlength="255" />
                    </div>
                </div>
                <div class="row mt10">
                    <div class="col-sm-9 form-group">
                        <label for="txtNarration">Narration : <span class="mandatory">*</span></label>
                        <input type="text" id="txtNarration" name="txtNarration" class="form-control" autocomplete="off" maxlength="255" />
                    </div>
                </div>
                <div class="row mt10">
                    <div class="col-sm-4 form-group">
                        <input type="submit" class="btn btn-md btn-warning btn-block" value="Save">
                    </div>
                </div>
                <div class="row mt10">
                    <div id="data" class="col-sm-9">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
