@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@using System.Data;
@{
    DataTable objStates = PortalApplication.States;
}
@*@Scripts.Render("~/js/app/approvalrejection")*@
<script src="~/js/app/approvalrejection.js" type="text/javascript"></script>
<div id="pnlMain" class="notificationBox">
    <h3>Approve / Reject - Credit & Debit Instructions</h3>
    @*instruction_id
        company_code
        instruction_type
        instrument_no
        amount
        mode_of_payment
        date_of_payment
        remark
        status
        created_by
        creation_datetime
        approvers_remark
        approved_by
        approval_datetime*@
    <div class="row mt10" style="display:none" id="frm">
        <div class="col-sm-12">
            <form id="frmMain" method="post" autocomplete="off">
                <div class="row mt10">
                    <div class="col-sm-8 form-group">
                        <label for="txtCompanyName">Company Name : <span class="mandatory">*</span></label>
                        <input id="txtCompanyName" name="txtCompanyName" type="text" class="form-control" disabled autocomplete="off" />
                    </div>
                </div>
                <div class="row mt10">
                    <div class="col-sm-4 form-group">
                        <label for="txtDateOfPayment">Date of Transaction : <span class="mandatory">*</span></label>
                        <input type="text" id="txtDateOfPayment" name="txtDateOfPayment" class="form-control" disabled autocomplete="off" />
                    </div>
                    <div class="col-sm-4 form-group">
                        <label for="cboInstructionType">Transaction Type : <span class="mandatory">*</span></label>
                        <input type="text" id="cboInstructionType" name="cboInstructionType" class="form-control" required disabled="disabled" autocomplete="off" />
                    </div>
                </div>
                <div class="row mt10">
                    <div class="col-sm-4 form-group">
                        <label for="txtReferenceNo">Reference Number : <span class="mandatory">*</span></label>
                        <input id="txtReferenceNo" name="txtReferenceNo" type="text" class="form-control" disabled autocomplete="off" />
                    </div>
                    <div class="col-sm-4 form-group">
                        <label for="txtModeOfPayment">Mode of Payment : <span class="mandatory">*</span></label>
                        <input id="txtModeOfPayment" name="txtModeOfPayment" type="text" class="form-control" disabled autocomplete="off" />
                    </div>
                </div>
                <div class="row mt10">
                    <div class="col-sm-4 form-group">
                        <label for="txtAmount">Amount : <span class="mandatory">*</span></label>
                        <input id="txtAmount" name="txtAmount" type="text" class="form-control" disabled autocomplete="off" />
                    </div>
                </div>
                <div class="row mt10">
                    <div class="col-sm-8 form-group">
                        <label for="txtRemarks">Remarks : <span class="mandatory">*</span></label>
                        <input type="text" id="txtRemarks" name="txtRemarks" class="form-control" disabled autocomplete="off" />
                        <input type="hidden" id="hddInstructionId" name="hddInstructionId" />
                    </div>
                </div>
                <div class="row mt10">
                    <div class="col-sm-8 form-group">
                        <label for="txtNarration">Narration : <span class="mandatory">*</span></label>
                        <input type="text" id="txtNarration" name="txtNarration" class="form-control" disabled autocomplete="off" />
                    </div>
                </div>
                <div class="row mt10">
                    <div class="col-sm-4 form-group">
                        <label for="txtCreatedBy">Created By : <span class="mandatory">*</span></label>
                        <input id="txtCreatedBy" name="txtCreatedBy" type="text" class="form-control" disabled autocomplete="off" />
                    </div>
                    <div class="col-sm-4 form-group">
                        <label for="txtCreationTimeStamp">Creation Timestamp : <span class="mandatory">*</span></label>
                        <input id="txtCreationTimeStamp" name="txtCreationTimeStamp" type="text" class="form-control" disabled autocomplete="off" />
                    </div>
                </div>
                <div class="row mt10">
                    <div class="col-sm-4 form-group">
                        <label for="cboStatus">Status : <span class="mandatory">*</span></label>
                        <select id="cboStatus" name="cboStatus" class="form-control">
                            <option value="">-- Select --</option>
                            <option value="A">Approved</option>
                            <option value="R">Rejected</option>
                        </select>
                    </div>
                </div>
                <div class="row mt10">
                    <div class="col-sm-8 form-group">
                        <label for="txtApproversRemark">Approvers Remark : <span class="mandatory">*</span></label>
                        <input id="txtApproversRemark" name="txtApproversRemark" class="form-control" type="text" autocomplete="off" maxlength="255" />
                    </div>
                </div>
                <div class="row mt10">
                    <div class="col-sm-4 form-group">
                        <input type="submit" class="btn btn-md btn-warning btn-block" value="Save">
                    </div>
                    <div class="col-sm-4 form-group">
                        <input type="button" id="butCancel" class="btn btn-md btn-warning btn-block" value="Cancel">
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row mt10">
        <div class="col-sm-12">
            <div id="data" class="table-responsive">
            </div>
        </div>
    </div>
</div>