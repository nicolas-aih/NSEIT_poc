@{
    ViewBag.Title = "LedgerReport";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@*@Scripts.Render("~/js/app/ledgerreport")*@
<script src="~/js/app/ledgerreport.js" type="text/javascript"></script>
<div id="pnlMain" class="notificationBox">
    <h3>
        Ledger Report
    </h3>
    <form id="frmMain">
        @if (@PortalSession.RoleCode == "BO")
        {
            <div class="row mt-10">
                <div class="col-sm-12">
                    <div class="col-sm-4 form-group">
                        <label for="cboCompanyType">Company Type : <span class="mandatory">*</span></label>
                        <Select id="cboCompanyType" name="cboCompanyType" class="form-control" required>
                            <option value="">--Select--</option>
                            <option value="I">Insurer</option>
                            <option value="CA">Corporate Agent</option>
                            <option value="WA">Web Aggregator</option>
                            <option value="IMF">Insurance Marketing Firm</option>
                            <option value="BR">Insurance Broker</option>
                        </Select>
                    </div>
                    <div class="col-sm-6 form-group">
                        <label for="cboCompany">Company Name: <span class="mandatory">*</span></label>
                        <select id="cboCompany" name="cboCompany" class="form-control" required></select>
                    </div>
                </div>
            </div>
        }
        <div class="row mt-10">
            <div class="col-sm-12" id="dvApplicantDetails">
                <div class="col-sm-4 form-group">
                    <label for="lblFromDate">From date<span class="mandatory">*</span></label>
                    <input id="txtFromDate" readonly="readonly" style="cursor:pointer;background-color:white;" name="txtFromDate" type="text" class="form-control dtpick" autocomplete="off" />
                </div>
                <div class="col-sm-4 form-group">
                    <label for="lblToDate">Till date<span class="mandatory">*</span></label>
                    <input id="txtToDate" readonly="readonly" style="cursor:pointer;background-color:white;" name="txtToDate" type="text" class="form-control dtpick" autocomplete="off" />
                </div>
                <div class="col-sm-4 form-group">
                    <label>&nbsp;<span class="mandatory">&nbsp;</span></label>
                    <input id="btnexport" type="Submit" class="btn btn-md btn-warning btn-block" value="Export" />
                </div>
                <div class="col-sm-9" id="ResponseFile">

                </div>
            </div>
        </div>
    </form>
</div>