<div id="sponsorshipForm" class="notificationBox">
    <h3>Add Range</h3>
    <input type="hidden" name="hi_role_id" id="hi_role_id" />
    <div class="row">
        <div class="col-sm-12">
            <form id="frmMain">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="ddlInsurerName">Insurer Name : <span class="mandatory">*</span></label>
                            <select id="ddlInsurerName" name="ddlInsurerName" class="form-control form-control-sm ">
                                <option value="0">--Select--</option>
                                @foreach (DataRow drr in objDatatableInsureName.Rows)
                                {
                                    <option value="@drr["varInsurerID"]">@drr["varName"]</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="txtRangeCount">Range Count : </label> <span class="mandatory">*</span>
                            <input id="txtRangeCount" name="txtRangeCount" type="text" class="form-control form-control-sm" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <div class="btn-outline-dark">
                            <input id="btnSave" name="btnSave" type="submit" value="Save" class="btn btn-md btn-warning btn-block">
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="btn-outline-dark">
                            <input id="btnCancel" name="btnCancel" type="reset" value="Cancel" class="btn btn-md btn-warning btn-block">
                        </div>
                    </div>
                    <div id="data" class="col-sm-9">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>