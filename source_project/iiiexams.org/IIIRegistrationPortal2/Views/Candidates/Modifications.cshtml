@using System.Data;
@{
    ViewBag.Title = "Modifications";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@*@Scripts.Render("~/js/app/modifications")*@
<script src="~/js/app/modifications.js" type="text/javascript"></script>

<div class="notificationBox">
    <h3>Modify Details</h3>
    <div class="row">
        <div id="SearchForm" class="col-sm-12">
            <form id="frmSearch" autocomplete="off">
                <div class="row  mt10">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="txtURN">URN : <span class="mandatory">*</span></label>
                            <input type="text" id="txtURN" name="txtURN" required class="form-control" maxlength="14" style="text-transform:uppercase" autocomplete="off" />
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="txtDOB">Date of Birth : <span class="mandatory">*</span></label>
                            <input type="text" id="txtDOB" name="txtDOB" readonly="readonly" required class="form-control dtpick" style="cursor:pointer; background-color:white;" autocomplete="off" />
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label><span class="mandatory">&nbsp;</span></label>
                            <input type="submit" class="btn btn-md btn-warning btn-block" value="Search" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div id="MainForm" class="col-sm-12" style="display:none">
            <form id="frmMain" autocomplete="off">
                <input type="hidden" id="hdnURN" name="hdnURN" value="" />
                <input type="hidden" id="hdnWhatsAppMessage" name="hdnWhatsAppMessage" value="" />
                <div class="row  mt10">
                    <div class="col-sm-12">
                        <div class="col-sm-12" style="background-color:lightgray"><H4>Candidate's Photo :</H4></div>
                    </div>
                </div>
                <div class="row  mt10">
                    <div class="col-sm-6">
                        <div class="col-sm-10"><H5><u>Current:</u></H5></div>
                    </div>
                    @*<div class="col-sm-6">
                <div class="col-sm-10"><H5><u>New: </u></H5></div>
            </div>*@
                </div>
                <div class="row  mt10">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <img id="imgFilePhotoO" src="" style="cursor:pointer; width:100px; height:125px; border:2px solid black;" />
                        </div>
                    </div>
                    @*<div class="col-sm-6">
                <div class="form-group">
                    <img id="imgFilePhoto" src="~/Images/Photo.jpg" style="cursor:pointer; width:100px; height:125px; border:2px solid black;" />
                    <input type="file" id="txtFilePhoto" name="txtFilePhoto" style="display:none" class="form-control" /><br /><br />
                    <I>(click on the image to select)</I>
                </div>
            </div>*@
                </div>
                <div class="row  mt10">
                    <div class="col-sm-12">
                        <div class="col-sm-12" style="background-color:lightgray"><H4>Candidate's Signature :</H4></div>
                    </div>
                </div>
                <div class="row  mt10">
                    <div class="col-sm-6">
                        <div class="col-sm-10"><H5><u>Current:</u></H5></div>
                    </div>
                    @*<div class="col-sm-6">
                <div class="col-sm-10"><H5><u>New: </u><br /></H5></div>
            </div>*@
                </div>
                <div class="row  mt10">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <img id="imgFileSignO" src="" style="cursor:pointer; width:100px; height:35px; border:2px solid black;" />
                        </div>
                    </div>
                    @*<div class="col-sm-6">
                <div class="form-group">
                    <img id="imgFileSign" src="~/Images/Signature.jpg" style="cursor:pointer; width:100px; height:35px; border:2px solid black;" />
                    <input type="file" id="txtFileSign" name="txtFileSign" style="display:none" class="form-control" /><br /><br />
                    <I>(click on the image to select)</I>
                </div>
            </div>*@
                </div>
                <div class="row  mt10">
                    <div class="col-sm-12">
                        <div class="form-group" style="color:red">
                            If you feel if your Photo / Signature are incorrect, blurred, not sufficiently clear to identify you and need to be changed, Kindly contact your organization's coordinator.
                        </div>
                    </div>
                </div>
                <div class="row  mt10">
                    <div class="col-sm-12">
                        <div class="col-sm-12" style="background-color:lightgray"><H4>Examination Center :</H4></div>
                    </div>
                </div>
                <div class="row  mt10">
                    <div class="col-sm-6">
                        <div class="col-sm-10"><H5><u>Current:</u></H5></div>
                    </div>
                    <div class="col-sm-6">
                        <div class="col-sm-10"><H5><u>New:</u></H5></div>
                    </div>
                </div>
                <div class="row  mt10">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="txtExamCenterState">Exam Center - State :</label>
                            <input type="text" id="txtExamCenterState" name="txtExamCenterState" readonly class="form-control" autocomplete="off" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="cboStates">Exam Center - State :</label>
                            <select id="cboStates" name="cboStates" class="form-control">
                                <option value="">-- Select --</option>
                                @foreach (DataRow dr in PortalApplication.States.Rows)
                                {
                                    <option value="@dr["state_id"]">@dr["state_name"]</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row  mt10">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="txtExamCenterDistrict">Exam Center - District :</label>
                            <input type="text" id="txtExamCenterDistrict" name="txtExamCenterDistrict" readonly class="form-control" autocomplete="off" />
                        </div>
                    </div>
                    <div class="col-sm-6 offset-sm-6">
                        <div class="form-group">
                            <label for="cboDistricts">Exam Center - District :</label>
                            <select id="cboDistricts" name="cboDistricts" class="form-control">
                                <option value="">-- Select --</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row  mt10">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="txtExamCenter">Exam Center :</label>
                            <input type="text" id="txtExamCenter" name="txtExamCenter" readonly class="form-control" autocomplete="off" />
                            <input type="hidden" id="hdnExamCenterId" name="hdnExamCenterId" />
                        </div>
                    </div>
                    <div class="col-sm-6 offset-sm-6">
                        <div class="form-group">
                            <label for="cboExamCenters">Exam Center : </label>
                            <select id="cboExamCenters" name="cboExamCenters" class="form-control">
                                <option value="">-- Select --</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row  mt10">
                    <div class="col-sm-12">
                        <div class="col-sm-12" style="background-color:lightgray"><H4>Examination Language :</H4></div>
                    </div>
                </div>
                <div class="row  mt10">
                    <div class="col-sm-6">
                        <div class="col-sm-10"><H5><u>Current:</u></H5></div>
                    </div>
                    <div class="col-sm-6">
                        <div class="col-sm-10"><H5><u>New:</u></H5></div>
                    </div>
                </div>
                <div class="row  mt10">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <input type="text" id="txtLanguage" name="txtExamCenter" readonly class="form-control" autocomplete="off" />
                            <input type="hidden" id="hdnExamLanguageId" name="hdnExamLanguageId" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <select id="cboLanguage" name="cboLanguage" class="form-control">
                                <option value="">-- Select --</option>
                                @foreach (DataRow dr in PortalApplication.ExamLanguage.Rows)
                                {
                                    <option value="@dr["language_id"]">@dr["language_name"]</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row  mt10">
                    <div class="col-sm-12">
                        <div class="col-sm-12" style="background-color:lightgray"><H4>WhatsApp contact details :</H4></div>
                    </div>
                </div>
                <div class="row  mt10">
                    <div class="col-sm-6">
                        <div class="col-sm-10"><H5><u>Current:</u></H5></div>
                    </div>
                    <div class="col-sm-6">
                        <div class="col-sm-10"><H5><u>New:</u></H5></div>
                    </div>
                </div>
                <div class="row  mt10">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="txtCurrentMobileNumber">Mobile Number : </label>
                            <input type="text" id="txtCurrentMobileNumber" name="txtCurrentMobileNumber" readonly class="form-control" autocomplete="off" />
                        </div>
                    </div>
                </div>
                <div class="row  mt10">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="lblAllowWhatsappMessage">Does you wish to get WhatsApp Messages? : </label>
                            <input type="text" id="lblAllowWhatsappMessage" name="lblAllowWhatsappMessage" readonly class="form-control" autocomplete="off" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="cboAllowWhatsappMessage">Does you wish to get WhatsApp Messages? : <span class="mandatory">*</span></label>
                            <select id="cboAllowWhatsappMessage" name="cboAllowWhatsappMessage" class="form-control">
                                <option value=''>-- Select --</option>
                                <option value="Y">Yes</option>
                                <option value="N">No</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row  mt10">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="txtCurrentWhatsAppNo">WhatsApp Number : </label>
                            <input type="text" id="txtCurrentWhatsAppNo" name="txtCurrentWhatsAppNo" readonly class="form-control" autocomplete="off" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="txtWhatsAppNo">WhatsApp Number: </label>
                            <input id="txtWhatsAppNo" name="txtWhatsAppNo" class="form-control" type="text" maxlength="15" autocomplete="off" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <span style="color:blue">
                            Note: If you opt for WhatsApp messages, but do not provide a WhatsApp number, then WhatsApp messages will be sent to your mobile number.
                        </span>
                    </div>
                </div>
                <div class="row  mt10">
                    <div class="col-sm-3 offset-sm-9" style="align-content:flex-end">
                        <div class="form-group">
                            <input type="submit" class="btn btn-md btn-warning btn-block" value="Save" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>