@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@if (PortalSession.RoleCode.In(new string[] { "CA", "WA", "IMF", "BR" }))
{
    @*@Scripts.Render("~/js/app/approvalrejectionurncorps")*@
    <script src="~/js/app/approvalrejectionurncorps.js" type="text/javascript"></script>
}
else
{
    @*@Scripts.Render("~/js/app/approvalrejectionurn")*@
    <script src="~/js/app/approvalrejectionurn.js" type="text/javascript"></script>
}
<div id="pnlMain" class="notificationBox">
    <h3>Training Registration Request Status</h3>
    <div class="row mt-10">
        <div class="col-sm-3">
            <label for="cboStatus">Request Status : <span class="mandatory">*</span></label>
            <select name="cboStatus" id="cboStatus" class="form-control">
                <option value="">-- Select --</option>
                <option value="P">Pending</option>
                <option value="A">Approved</option>
                <option value="R">Rejected</option>
            </select>
        </div>
    </div>
    <div id="dvGrid" class="row mt10">
        <div class="col-sm-12">
            <div id="data" class="table-responsive">
            </div>
        </div>
    </div>
    <div id="divForm" title="Approval / Rejection of URN Request" style="display:none">
        <form name="frmApp" id="frmApp" autocomplete="off">
            <div class="row mt10">
                <div class="col-sm-12">
                    <input type="hidden" name="hddId" id="hddId" value="" />
                    <label for="cboStatus2">Status :<span class="mandatory">*</span></label>
                    <select id="cboStatus2" name="cboStatus2" class="form-control">
                        <option value="">--Select--</option>
                        <option value="A">Approved</option>
                        <option value="R">Rejected</option>
                    </select>
                </div>
            </div>
            <div class="row mt10">
                <div class="col-sm-12">
                    <label for="txtRemarks">Remarks :<span class="mandatory">*</span></label>
                    <input type="text" id="txtRemarks" name="txtRemarks" class="form-control" maxlength="255" />
                </div>
            </div>
            <div class="row mt10">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-warning">Save</button>&nbsp;
                    <button type="button" id="butCancel" name="butCancel" class="btn btn-warning">Cancel</button>
                </div>
            </div>
        </form>
    </div>
</div>