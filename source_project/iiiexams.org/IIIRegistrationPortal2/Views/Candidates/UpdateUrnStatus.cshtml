
@{
    ViewBag.Title = "Change URN Status";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@*@Scripts.Render("~/js/app/updateURNStatus")*@
<script src="~/js/app/updateURNStatus.js" type="text/javascript"></script>


<div id="pnlNotifications" class="notificationBox">
    <h3>Change URN Status</h3>
    <div class="row">
        <div class="col-sm-12">
            <div class="row mt10">
                <div class="col-sm-12">
                    <form id="frmMain">
                        <div class="row mt10">
                            @*<div class="form-group" id="ResponseFile">
                                </div>*@
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="urn">URN : <span class="mandatory">*</span></label>
                                    <input id="urn" name="urn" type="text" class="form-control " maxlength="256" required />
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="status">Applicant/URN Status : <span class="mandatory">*</span></label>
                                    <select id="status" name="status" class="form-control" required>
                                        <option> --Select-- </option>
                                        <option value="Sponsored"> Sponsored </option>
                                        <option value="Trained"> Trained </option>
                                    </select>
                                </div>
                            </div>

                        </div>
                        <div class="row mt10">
                            <div class="col-sm-5">
                                <input type="submit" class="btn btn-md btn-warning btn-block" value="Change URN Status">
                            </div>
                            <div class="col-sm-3">
                                <input type="button" id="butCancel" class="btn btn-md btn-warning btn-block" value="Cancel">
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

