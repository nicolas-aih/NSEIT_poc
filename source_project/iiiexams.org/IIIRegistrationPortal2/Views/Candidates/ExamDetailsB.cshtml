@using System.Data;
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@*@Scripts.Render("~/js/app/examdetailsb")*@
<script src="~/js/app/examdetailsb.js" type="text/javascript"></script>

<div class="notificationBox">
    <h3>Bulk Upload Exam Details</h3>
    <div class="row mt10">
        <div class="col-sm-12">
            <form id="frmUploadMain" autocomplete="off">
                <div class="row mt10">
                    <div class="col-sm-4 form-group">
                        <label for="cboAction">Select Action : <span class="mandatory">*</span></label>
                        <select id="cboAction" name="cboAction" class="form-control" required>
                            <option value="">-- Select --</option>
                            @if (PortalApplication.IntegrationMode == "OAIMS")
                            {
                                <option value="1">Download Applicant Details</option>
                                <option value="2">Allocate Slot</option>
                                <option value="3">Upload Result</option>
                                <option value="4">AIMS Response</option>
                            }
                            @if (PortalApplication.IntegrationMode == "CSS")
                            {
                                <option value="1">Download Applicant Details</option>
                                <option value="3">Upload Result</option>
                            }
                        </select>
                    </div>
                    <div class="col-sm-4 form-group" id="dtFrom">
                        <label for="txtFromDate">From date : <span class="mandatory">*</span></label>
                        <input id="txtFromDate" name="txtFromDate" type="text" class="form-control dtpick" readonly="readonly" style="cursor:pointer; background-color:white;" />
                    </div>
                    <div class="col-sm-4 form-group" id="dtTill">
                        <label for="txtTillDate">Till date : <span class="mandatory">*</span></label>
                        <input id="txtTillDate" name="txtTillDate" type="text" class="form-control dtpick" readonly="readonly" style="cursor:pointer; background-color:white;" />
                    </div>
                    <div class="col-sm-8 form-group" id="lblTemplate" style="vertical-align:text-bottom; text-align:end">

                    </div>
                </div>
                <div id="dtFile">
                    <div class="row mt10">
                        <div class="col-sm-9 form-group">
                            <label for="txtFile">Select File : <span class="mandatory">*</span></label>
                            <input id="txtFile" name="txtFile" type="file" class="form-control" />
                        </div>
                    </div>
                    <div class="row mt10">
                        <div class="col-sm-6">
                            <div>
                                <ul>
                                    <li><i>File Type: TAB seperated values with extension csv. Check the template for reference</i></li>
                                    <li><i>Maximum size : 5 megabytes.</i></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt10" style="text-align:">
                    <div class="col-sm-3 form-group">
                        <input type="Submit" class="btn btn-md btn-warning btn-block" value="Proceed" />
                    </div>
                </div>
                <div class="row mt10">
                    <div class="col-sm-9" id="ResponseFile">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>