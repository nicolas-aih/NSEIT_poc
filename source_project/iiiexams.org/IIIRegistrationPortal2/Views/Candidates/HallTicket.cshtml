@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@*@Scripts.Render("~/js/app/hallticket")*@
<script src="~/js/app/hallticket.js" type="text/javascript"></script>

<div class="notificationBox">
    <h3>Download Hall Ticket</h3>
    <div class="row">
        <div class="col-sm-12">
            <form id="frmMain" autocomplete="off">
                <div class="row mt10">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="txtURN">URN : <span class="mandatory">*</span></label>
                            <input id="txtURN" name="txtURN" type="text" class="form-control" required autocomplete="off" />
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="txtDOB">Date of birth : <span class="mandatory"></span></label>
                            <input id="txtDOB" name="txtDOB" type="text" class="form-control dtpick" readonly="readonly" style="cursor:pointer; background-color:white;" autocomplete="off" />
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="txtExamDate">Exam Date : <span class="mandatory"></span></label>
                            <input id="txtExamDate" name="txtExamDate" type="text" class="form-control dtpick" readonly="readonly" style="cursor:pointer; background-color:white;" autocomplete="off" />
                        </div>
                    </div>
                </div>
                <div class="row mt10">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label><i>Please enter either Date of Birth OR Date of Exam. If both are entered, then Date of Birth will be considered to search the record.</i></label>
                        </div>
                    </div>
                </div>
                <div class="row mt10">
                    <div class="col-sm-offset-8 col-sm-4">
                        <div class="form-group">
                            <input type="submit" class="btn btn-md btn-warning btn-block" value="Download">
                        </div>
                    </div>
                </div>
                <div class="row mt10">
                    <div class="col-sm-4" id="Results">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>