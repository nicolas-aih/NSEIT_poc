@using System.Data;
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@*@Scripts.Render("~/js/app/examdetails")*@
<script src="~/js/app/examdetails.js" type="text/javascript"></script>
<link href="~/CSS/jquery.timepicker.min.css" rel="stylesheet" />
<script src="~/js/jquery.timepicker.min.js"></script>
<div class="notificationBox">
    <h3>Exam Details</h3>
    <div class="row">
        <div id="SearchForm" class="col-sm-12">
            <form id="frmSearch" autocomplete="off">
                <div class="row  mt10">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="txtURN">URN : <span class="mandatory">*</span></label>
                            <input type="text" id="txtURN" name="txtURN" required class="form-control" maxlength="14" style="text-transform:uppercase" autocomplete="off" />
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label><span class="mandatory">&nbsp;</span></label>
                            <input type="submit" class="btn btn-md btn-warning btn-block" value="Search" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div id="MainForm" class="col-sm-12">
            <div class="row  mt10">
                <div class="col-sm-12">
                    <div class="col-sm-6"><label>Candidate URN :</label></div>
                    <div class="col-sm-6">
                        <span id="txtCandidateURN"></span>
                    </div>
                </div>
            </div>
            <div class="row  mt10">
                <div class="col-sm-12">
                    <div class="col-sm-6"><label>Application date :</label></div>
                    <div class="col-sm-6">
                        <span id="txtApplicationDate"></span>
                    </div>
                </div>
            </div>
            <div class="row  mt10">
                <div class="col-sm-12">
                    <div class="col-sm-6"><label>Insurance Company :</label></div>
                    <div class="col-sm-6">
                        <span id="txtInsuranceCompany"></span>
                    </div>
                </div>
            </div>
            <div class="row  mt10">
                <div class="col-sm-12">
                    <div class="col-sm-6"><label>Insurance type :</label></div>
                    <div class="col-sm-6">
                        <span id="txtInsuranceType"></span>
                    </div>
                </div>
            </div>
            <div class="row  mt10">
                <div class="col-sm-12">
                    <div class="col-sm-6"><label>Candidate Name :</label></div>
                    <div class="col-sm-6">
                        <span id="txtCandidateName"></span>
                    </div>
                </div>
            </div>
            <div class="row  mt10">
                <div class="col-sm-12">
                    <div class="col-sm-6"><label>Candidate's Photo:</label></div>
                    <div class="col-sm-3">
                        <img id="imgFilePhoto" src="" style="cursor:pointer; width:100px; height:125px; border:2px solid black;" />
                    </div>
                    @*<div class="col-sm-3">
                            <img id="imgFileSign" src="" style="cursor:pointer; width:100px; height:35px; border:2px solid black;" />
                        </div>*@
                </div>
            </div>
            <div class="row  mt10">
                <div class="col-sm-12">
                    <div class="col-sm-6"><label>Date of birth :</label></div>
                    <div class="col-sm-6">
                        <span id="txtCandidateDOB"></span>
                    </div>
                </div>
            </div>
            <div class="row  mt10">
                <div class="col-sm-12">
                    <div class="col-sm-6"><label>Exam body :</label></div>
                    <div class="col-sm-6">
                        <span>Insurance Institute of India</span>
                    </div>
                </div>
            </div>
            <div class="row mt10">
                <div class="col-sm-12">
                    <div class="col-sm-6"><label>Examination Center :</label></div>
                    <div class="col-sm-6">
                        <span id="txtExaminationCenter"></span>
                    </div>
                </div>
            </div>
            <div class="row mt10">
                <div class="col-sm-12">
                    <div class="col-sm-6"><label>Action :</label></div>
                    <div class="col-sm-6">
                        <select id="cboAction" name="cboAction" class="form-control">
                            <option value="" selected>-- Select --</option>
                            @if (PortalApplication.IntegrationMode == "OAIMS")
                            {
                                <option value="1">Allocate Slot</option>
                                <option value="2">Enter Exam Details</option>
                                <option value="3">Invalidate Registration</option>
                            }
                            @if (PortalApplication.IntegrationMode == "CSS")
                            {
                                <option value="2">Enter Exam Details</option>
                                <option value="3">Invalidate Registration</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <form id="frmMain" autocomplete="off">
                <input type="hidden" id="hdnAction" name="hdnAction" value="" />
                <input type="hidden" id="hdnURN" name="hdnURN" value="" />
                <div class="row mt10" id="Row1">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="txtExaminationDate">Examination date<span class="mandatory">*</span></label>
                            <input type="text" id="txtExaminationDate" name="txtExaminationDate" class="form-control dtpick" readonly="readonly" style="cursor:pointer; background-color:white;">
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="txtExaminationTime">Examination Time<span class="mandatory">*</span></label>
                            <input type="text" id="txtExaminationTime" name="txtExaminationTime" class="form-control tmpick" readonly="readonly" style="cursor:pointer; background-color:white;">
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="txtExamineeId">Examinee Id<span class="mandatory">*</span></label>
                            <input type="text" id="txtExamineeId" name="txtExamineeId" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row  mt10" id="Row2">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="txtMarks">Marks<span class="mandatory">*</span></label>
                            <input id="txtMarks" name="txtMarks" type="text" class="form-control" autocomplete="off" />
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="cboStatus">Status<span class="mandatory">*</span></label>
                            <select id="cboStatus" name="cboStatus" class="form-control">
                                <option value="1">Pass</option>
                                <option value="2">Fail</option>
                                <option value="3">Absent</option>
                                <option value="4">Withheld - Can Reappear</option>
                                <option value="5">Withheld - Cannot Reappear</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row  mt10" id="Row3">
                    <div class="col-sm-3 offset-sm-9" style="align-content:flex-end">
                        <div class="form-group">
                            <input type="submit" class="btn btn-md btn-warning btn-block" value="Save" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>