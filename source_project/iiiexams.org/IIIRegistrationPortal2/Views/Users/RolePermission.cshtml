@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<link href="~/DataTables/datatables.min.css" rel="stylesheet" />
<link href="~/DataTables/select.dataTables.min.css" rel="stylesheet" />
<link href="~/CSS/select2.min.css" rel="stylesheet" />
<script src="~/DataTables/datatables.min.js"></script>
<script src="~/DataTables/select.dataTables.js"></script>
@*@Scripts.Render("~/js/app/RolePermission")*@
<script src="~/js/app/RolePermission.js"></script>
<script src="~/js/select2.min.js"></script>

<style>
    .center {
        z-index: 1000;
        margin: 300px auto;
        padding: 10px;
        width: 130px;
        border-radius: 10px;
        filter: alpha(opacity=100);
        opacity: 1;
        -moz-opacity: 1;
    }

    .table.dataTable thead th, table.dataTable thead td {
        background-color: #1e4396 !important;
        color: white;
    }
</style>



<div id="pnlNotifications" class="notificationBox">
    <h3>Role Permission</h3>

    <div class="row">
        <div class="col-sm-12">
            <div class="row mt10">
                <div class="col-md-6 form-inline" id="divtype">
                    <label for="lblPermission">Permissions For</label>
                    <select id="ddltype" class="form-control">
                        <option value="1">Role</option>
                        <option value="0">User</option>
                    </select>

                </div>
                <div class="col-sm-6 form-inline">
                    <label for="lblType">Select Role nane / User id</label>
                    <select name="options" id="ddlRoleType" class="form-control" style='width: 300px;'></select>
                </div>

            </div>

        </div>
    </div>
    <div class="row mt10">
        <div class="col-sm-12">
            <div id="divdata" style=" height: 500px;overflow: scroll;">
                <table id="tblMenuData" class='table table-striped table-bordered table-hover' style="overflow-y:visible;">

                    <thead style="background-color: #1e4396 !important;color: white;">
                        <tr>
                            @*<td>MenuAccess</td>
                                <td><input type="checkbox" id="chkAll" style="height:15px;width:15px;vertical-align:sub;" />All</td>*@
                            <td style="display:none">MenuId</td>
                            <td>Menu</td>
                            <td style="display:none">MenuAccess</td>
                            <td>Allow Access</td>

                        </tr>
                    </thead>
                    <tbody id="tbdata"></tbody>
                </table>
            </div>
            <div class="form-group">
                <div id="dvbuttons" class="row mt10" style="margin: 40px 0px 0px 330px;">
                    <div class="btn-outline-dark">

                        <input id="btnSave" name="btnSave" type="button" value="Save" class="btn btn-warning btn-sm">
                        <input id="btncancel" name="btncancel" type="button" value="Cancel" class="btn btn-danger btn-sm" onclick="javascript:location.href ='#'; return false;">

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal" style="display: none">
    <div class="center">
        <img alt="" src="~/Images/Loader.gif" />
    </div>
</div>

