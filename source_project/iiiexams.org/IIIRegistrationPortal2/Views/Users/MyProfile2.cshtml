@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@using System.Data;
@*@Scripts.Render("~/js/app/myprofile2")*@
<script src="~/js/app/myprofile2.js"></script>

<div id="pnlLoginRequest" class="notificationBox">
    <h3>Profile</h3>
    <div class="row">
        <div class="col-sm-12">
            <form id="frmMain" autocomplete="off">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="txtLoginId">Login Id :</label>
                            <input id="txtLoginId" name="txtLoginId" type="text" class="form-control form-control-sm password" disabled autocomplete="off" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="txtName">Name :</label>
                            <input id="txtName" name="txtName" type="text" class="form-control form-control-sm" disabled autocomplete="off" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="txtRole">Role :</label>
                            <input id="txtRole" name="txtRole" type="text" class="form-control form-control-sm" disabled value="@PortalSession.RoleName" autocomplete="off" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="txtInsurer">Insurer :</label>
                            <input id="txtInsurer" name="txtInsurer" type="text" class="form-control form-control-sm" disabled autocomplete="off" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label for="txtDP">Designated Person :</label>
                            <input id="txtDP" name="txtDP" type="text" class="form-control form-control-sm" disabled autocomplete="off" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label for="txtAddress1">Address Line 1 : <span class="mandatory">*</span></label>
                            <input id="txtAddress1" name="txtAddress1" type="text" class="form-control form-control-sm" required autocomplete="off" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label for="txtAddress2">Address Line 2 : <span class="mandatory">*</span></label>
                            <input id="txtAddress2" name="txtAddress2" type="text" class="form-control form-control-sm" required autocomplete="off" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label for="txtAddress3">Address Line 3 : <span class="mandatory">*</span></label>
                            <input id="txtAddress3" name="txtAddress3" type="text" class="form-control form-control-sm" required autocomplete="off" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="cboStates">State : <span class="mandatory">*</span></label>
                            <Select id="cboStates" name="cboStates" class="form-control form-control-sm" required>
                                @foreach (DataRow drStates in PortalApplication.States.Rows)
                                {
                                    <option value="@drStates["state_id"]">@drStates["state_name"]</option>
                                }
                            </Select>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="cboDistricts">Districts : <span class="mandatory">*</span></label>
                            <Select id="cboDistricts" name="cboDistricts" class="form-control form-control-sm" required></Select>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="txtPincode">Pincode : <span class="mandatory">*</span></label>
                            <input id="txtPincode" name="txtPincode" type="text" class="form-control form-control-sm" required autocomplete="off" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-8">
                        <div class="form-group">
                            <label for="txtEmailId">Email id : <span class="mandatory">*</span></label>
                            <input id="txtEmailId" name="txtEmailId" type="text" class="form-control form-control-sm" required autocomplete="off" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="txtPhoneOffice">Telephone (Office) :</label>
                            <input id="txtPhoneOffice" name="txtPhoneOffice" type="text" class="form-control form-control-sm" maxlength="15" autocomplete="off" />
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="txtPhoneRes">Telephone (Residence) :</label>
                            <input id="txtPhoneRes" name="txtPhoneRes" type="text" class="form-control form-control-sm" maxlength="15" autocomplete="off" />
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="txtMobile">Mobile No :</label>
                            <input id="txtMobile" name="txtMobile" type="text" class="form-control form-control-sm" maxlength="20" autocomplete="off" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="txtFAX">Fax :</label>
                            <input id="txtFAX" name="txtFAX" type="text" class="form-control form-control-sm" maxlength="15" autocomplete="off" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="offset-sm-9 col-sm-3">
                        <input type="submit" class="btn btn-md btn-warning btn-block" value="Save" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>