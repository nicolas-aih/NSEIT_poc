@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<script src="~/js/app/GetUserPassword.js" type="text/javascript"></script>

<div class="notificationBox">
    <h3>Get User Password</h3>

    <div class="row">
        <div id="Form" class="col-sm-12">
            <form id="frmMain" method="post" action="" autocomplete="off">
                
                <div class="row mt10" id="UpdateDiv">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label" id="labUrn">User Login Id : <span class="mandatory">*</span></label>
                            <input id="txtUserLoginId" name="txtUserLoginId" type="text" class="form-control" />
                        </div>
                    </div>                    
                    <div class="col-sm-3 " style="align-content:flex-end">
                        <div class="form-group">
                            <label class="control-label"></label>
                            <input type="submit" class="btn btn-md btn-warning btn-block mt10" value="Get Password" />
                        </div>
                    </div>
                </div>
                <div class="row mt10">
                    <div class="col-md-12" id="Result">

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

