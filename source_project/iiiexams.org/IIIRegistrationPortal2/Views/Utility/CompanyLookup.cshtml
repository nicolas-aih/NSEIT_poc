@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}


<script src="~/js/app/LoadCompanyDetails.js" type="text/javascript"></script>
<div class="notificationBox">
    <h3>Company Lookup</h3>
    <div class="row">
        <div id="Form" class="col-sm-12">
            <form id="frmMain" method="post" action="" autocomplete="off">
                <div class="row mt10" id="UpdateDiv">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label" id="labUrn">Search Company (Enter Part of Name OR Full PAN ) : <span class="mandatory">*</span></label>
                            <input id="txtCompanyName" name="txtCompanyName" type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="col-sm-3 " style="align-content:flex-end">
                        <div class="form-group">
                            <label class="control-label"></label>
                            <input type="submit" class="btn btn-md btn-warning btn-block mt10" value="Search" />
                        </div>
                    </div>
                </div>
                <div class="row mt10">
                    <div class="col-sm-12">
                        <div id="data" class="table-responsive" style="display:none">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


