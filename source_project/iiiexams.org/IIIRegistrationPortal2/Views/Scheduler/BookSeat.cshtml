@{
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}
<script src="~/js/app/bookseat.js"></script>
@*@Scripts.Render("~/js/app/bookseat")*@
<div class="paymentBox">
    <h3>Seat booking</h3>
    <div class="row">
        <div class="col-sm-12 ">
            <div class="row mt-10" id="dvURN">
                <div class="col-sm-12">
                    <div class="col-sm-offset-3 col-sm-6 form-group">
                        <form id="frmMain" autocomplete="off">
                            <div class="col-sm-10 form-group">
                                <input id="txtURN" name="txtURN" type="text" class="form-control" autocomplete="off" placeholder="Enter URN" />
                            </div>
                            <div class="col-sm-2">
                                <button type="submit" class="btn btn-md btn-warning btn-block"><img src="../images/searchBtn.png" width="20" height="20" /></button>
                            </div>
                        </form>
                    </div>
                </div>        
            </div>

            <div class="row mt-10" id="dvApplicantDetails">
                <div class="col-sm-12">
                    <div class="col-sm-offset-3 col-sm-6 form-group">
                        <input type="hidden" name="hdURN" id="hdURN" value="" />
                        <label for="lblCandidateName">Candidate Name<span class="mandatory">*</span></label>
                        <input id="txtCandidateName" name="txtCandidateName" type="text" class="form-control" autocomplete="off" disabled="disabled" />
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="col-sm-offset-3 col-sm-6 form-group">
                        <label for="cboCenter">Test Center<span class="mandatory">*</span></label>
                        <select id="cboCenter" name="cboCenter" class="form-control"></select>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="col-sm-offset-3 col-sm-6 form-group">
                        <label for="cboLanguage">Exam Language<span class="mandatory">*</span></label>
                        <select id="cboLanguage" name="cboLanguage" class="form-control"></select>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="col-sm-offset-3 col-sm-6 form-group">
                        <label for="cboDates">Exam Dates<span class="mandatory">*</span></label>
                        <select id="cboDates" name="cboDates" class="form-control"></select>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="col-sm-offset-3 col-sm-6">
                        <table id="tblbatches" class='table table-striped table-bordered table-hover'>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>