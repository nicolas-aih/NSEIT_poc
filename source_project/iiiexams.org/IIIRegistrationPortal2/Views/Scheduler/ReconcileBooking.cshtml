@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@*@Scripts.Render("~/js/app/reconcilebooking")*@
<script src="~/js/app/reconcilebooking.js" type="text/javascript"></script>

<div id="pnlMain" class="notificationBox">
    <h3>
        Reconcile Booking
    </h3>
    <form id="frmMain">
        <div class="row mt-10">
            <div class="col-sm-12" id="dvApplicantDetails">
                <div class="col-sm-4 form-group">
                    <label for="lblReconDate">Reconciliation date<span class="mandatory">*</span></label>
                    <input id="txtReconDate" readonly="readonly" style="cursor:pointer;background-color:white;" name="txtReconDate" type="text" class="form-control dtpick" autocomplete="off" />
                </div>
                <div class="col-sm-12" style="color:orangered; font-size:small; font-weight:600; font-style:italic">
                    Please ensure that, for any given exam date you reconcile data at least few days in advance, well before the data is exported to exams database.
                </div>
                <div class="col-sm-4 form-group">
                    <label>&nbsp;<span class="mandatory">&nbsp;</span></label>
                    <input id="butReconcile" type="Submit" class="btn btn-md btn-warning btn-block" value="Reconcile" />
                </div>
                <div class="col-sm-9" id="ResponseFile">

                </div>
            </div>
        </div>
    </form>
</div>

