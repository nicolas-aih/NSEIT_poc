@{
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}
@*@Scripts.Render("~/js/app/rcb")*@
<script src="~/js/app/rcb.js"></script>
<div class="paymentBox">
    <h3>Reschedule Batch</h3>
    <div class="row">
        <div class="col-sm-12 ">
            <div class="row mt-10" id="dvApplicantDetails">
                <div class="row mt-10 col-sm-12">
                    <div class="col-sm-4 form-group">
                        <label for="cboExamCenterOld">Examination Center<span class="mandatory">*</span></label>
                        <select id="cboExamCenterOld" name="cboExamCenterOld" class="form-control"></select>
                    </div>
                    <div class="col-sm-4 form-group">
                        <label for="txtExamDateOld">Test Date<span class="mandatory">*</span></label>
                        <input type="text" id="txtExamDateOld" name="txtExamDateOld" class="form-control dtpick" required readonly="readonly" style="cursor:pointer; background-color:white;" autocomplete="off"/>
                    </div>
                    <div class="col-sm-4 form-group">
                        <label for="cboSlotsOld">Test Time<span class="mandatory">*</span></label>
                        <select id="cboSlotsOld" name="cboSlotsOld" class="form-control"></select>
                    </div>
                </div>
                <div class="row mt-10 col-sm-12">
                    <div class="col-sm-offset-4 col-sm-4 form-group">
                        <label for="txtCandidateCount">Total Candidates Scheduled</label>
                        <input type="text" id="txtCandidateCount" name="txtCandidateCount" class="form-control" disabled="disabled" />
                    </div>
                </div>
                <div class="row mt-10 col-sm-12">
                    <div class="col-sm-12" style="color:orangered; font-size:small; font-weight:600; font-style:italic" >
                        Due to the dynamic nature, the actual count keeps on changing and may be different than the count shown above.
                    </div>
                </div>
                <div class="row mt-10 col-sm-12">&nbsp;</div>
                <div class="row  mt10 col-sm-12">
                    <div class="col-sm-12">
                        <div class="col-sm-12" style="background-color:lightgray"><H4>New Booking Details :</H4></div>
                    </div>
                </div>
                <div class="row mt-10 col-sm-12">
                    <div class="col-sm-4 form-group">
                        <label for="cboExamCenterNew">Test Center<span class="mandatory">*</span></label>
                        <select id="cboExamCenterNew" name="cboExamCenterNew" class="form-control"></select>
                    </div>
                    <div class="col-sm-4 form-group">
                        <label for="cboExamDateNew">Exam Dates<span class="mandatory">*</span></label>
                        <select id="cboExamDateNew" name="cboExamDateNew" class="form-control"></select>
                    </div>
                    <div class="col-sm-4 form-group">
                        <label for="txtRemarks">Remarks<span class="mandatory">*</span></label>
                        <input type="text" id="txtRemarks" name="txtRemarks" class="form-control" />
                    </div>
                </div>
                <div class="row mt-10 col-sm-12">
                    <div class="col-sm-offset-3 col-sm-6">
                        <table id="tblbatches" class='table table-striped table-bordered table-hover'>

                        </table>
                    </div>
                </div>
                <div class="row mt-10 col-sm-12">
                    <div class="col-sm-12" style="color:orangered; font-size:small; font-weight:600; font-style:italic">
                        <i>
                            The system will try to accomodate as many candidates possible in the selected batch. However due to its dynamic nature it may not be always be possible to reschedule all the candidates. Hence please verify the batch count once again after successful rescheduling.
                        </i>
                    </div>
                </div>
                <div class="row mt-10 col-sm-12">
                    <div class="col-sm-12">
                        <br />
                        <table id="tbldata" class='table table-striped table-bordered table-hover'></table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
                           