@{
    ViewBag.Title = "PaymentModes";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<script src="~/js/app/paymentmodes.js" type="text/javascript"></script>
<div id="pnlMain" class="notificationBox">
    <h3>
        Payment Modes
    </h3>
    <form id="frmMain">
        <div class="row mt10">
            <div class="col-sm-4">
                <label for="cboCompanyType">Company Type</label>
                <select id="cboCompanyType" name="cboCompanyType" class="form-control">
                    <option value="">-- Select --</option>
                    <option value="IA">Insurance Company</option>
                    <option value="CA">Corporate Agents</option>
                    <option value="WA">Web Aggregators</option>
                    <option value="IMF">Insurance Marketing Firms</option>
                    <option value="BR">Insurance Brokers</option>
                </select>
            </div>
            <div class="col-sm-4">
                <label for="txtCompanyLoginId">Enter Company Login Id</label>
                <input type="text" id="txtCompanyLoginId" name="txtCompanyLoginId" class="form-control" maxlength="20" />
            </div>
            <div class="col-sm-4">
                <label>&nbsp;</label>
                <input type="submit" value="Search" name="btnSearch" id="btnSearch" class="btn btn-sm btn-warning btn-block" />
            </div>
        </div>
    </form>
    <br /><br /><br />
    <form id="frmDetails" style="display:none">
        <div class="row mt10">
            <div class="col-sm-12">
                <label for="txtCompanyName">Company Name</label>
                <input type="text" id="txtCompanyName" name="txtCompanyName" class="form-control" maxlength="255" disabled/>
                <input type="hidden" id="hddCompanyLoginId" name="hddCompanyLoginId" value="" />
                <input type="hidden" id="hddCompanyType" name="hddCompanyType" value=""/>
            </div>
        </div>
        <div class="row mt10">
            <div class="col-sm-4">
                <label for="chkCreditBalance">Credit Balance</label>&nbsp;&nbsp;&nbsp;
                <input type="checkbox" id="chkCreditBalance" name="chkCreditBalance" />
            </div>
            <div class="col-sm-4">
                <label for="chkOnlinePayment">Online Payment</label>&nbsp;&nbsp;&nbsp;
                <input type="checkbox" id="chkOnlinePayment" name="chkOnlinePayment" />
            </div>
            <div class="col-sm-4">
                <label>&nbsp;</label>
                <input type="submit" value="Save" name="btnSave" id="btnSave" class="btn btn-sm btn-warning btn-block" />
            </div>
        </div>
    </form>
</div>
