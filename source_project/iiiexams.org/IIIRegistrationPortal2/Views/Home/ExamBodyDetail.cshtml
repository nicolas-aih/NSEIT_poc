@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@using System.Data;
<div class="notificationBox">
    <h3>Exam Body</h3>
    <div class="row">
        <div class="col-sm-12">
            <div class="row mt10">
                <div class="col-sm-12">
                    <div id="data">
                        <table class='table table-striped table-bordered table-hover'>
                            <thead>
                                <tr><td>Exam Body Id</td><td>Exam Body Code</td><td>Exam Body Name</td></tr>
                            </thead>
                            <tbody>
                            @foreach (DataRow dr in PortalApplication.ExamBody.Rows)
                            {
                                <tr><td>@dr["exam_body_id"]</td><td>@dr["exam_body_code"]</td><td>@dr["exam_body_name"]</td></tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>