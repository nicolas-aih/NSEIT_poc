@using System.Data;
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@*@Scripts.Render("~/js/app/districts")*@
<script src="~/js/app/Districts.js"></script>

<div class="notificationBox">
    <h3>Districts</h3>
    <div class="row">
        <div class="col-sm-12">
            <div class="row mt10">
                <div class="col-sm-12">
                    <a href="javascript:downloadalldistricts();">Download entire list</a>
                </div>
            </div>
            <div class="row mt10" id="GridFilter">
                <div class="col-sm-8">
                    <div class="form-group">
                        <label for="cboStates">State : <span class="mandatory">*</span></label>
                        <select id="cboStates" name="txt_State" class="form-control">
                            <option value="">-- Select --</option>
                            @foreach (DataRow dr in PortalApplication.States.Rows)
                            {
                                <option value="@dr["state_id"]">@dr["state_name"]</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="row mt10">
                <div class="col-sm-12">
                    <div id="data" style="display:none">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>