@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@using System.Data;
@*@Scripts.Render("~/js/app/viewexamcenterNonpl")*@
<script src="~/js/app/viewexamcenterNonpl.js" type="text/javascript"></script>

<div id="pnlNotifications" class="notificationBox">
    <h3>Exam Centers</h3>
    <div class="row">
        <div class="col-sm-12">
            <div class="row mt10">
                <div class="col-sm-8">
                    <div class="form-group"><label><i><a href="javascript:cl();">Get entire list</a></i></label></div>
                    <div id="ResponseFile"></div>
                </div>
            </div>
            <div class="row mt10"><div class="col-sm-8"><b>OR</b></div></div>
            <div class="row mt10" id="GridFilter">
                <form id="frmSearch" autocomplete="off">
                    <div class="col-sm-8">
                        <div class="form-group">
                            <label for="cboStatesF">Search by state : <span class="mandatory">*</span></label>
                            <select id="cboStatesF" name="cboStatesF" class="form-control" required>
                                <option value="">-- Select --</option>
                                @foreach (DataRow dr in PortalApplication.States.Rows)
                                {
                                    <option value="@dr["state_id"]">@dr["state_name"]</option>
                                }
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="row mt10">
                <div class="col-sm-12">
                    <div id="data" class="table-responsive" style="display:none">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>