@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@using System.Data;
@*@Scripts.Render("~/js/app/insurers")*@
<script src="~/js/app/insurers.js" type="text/javascript"></script>

<div id="pnlNotifications" class="notificationBox">
    <h3>Insurers</h3>
    <div class="row" id="GridFilter">
        <div class="col-sm-12">
            <form id="frmSearch" autocomplete="off">
                <div class="row mt10">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <input type="button" id="butNew" class="btn btn-md btn-warning btn-block" value="New Insurer">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="row mt10">
                <div class="col-sm-12">
                    <form id="frmMain" autocomplete="off" style="display:none">
                        @*<div class="row mt10">
                                <div class="col-sm-4 form-group">
                                    <label for="txtFromDate">Display Start Date <span class="mandatory">*</span></label>
                                    <input id="txtFromDate" readonly="readonly" name="txtFromDate" type="text" class="form-control dtpick" autocomplete="off" />
                                </div>
                                <div class="col-sm-4 form-group">
                                    <label for="txtToDate">Display Till Date <span class="mandatory">*</span></label>
                                    <input id="txtToDate" readonly="readonly" name="txtToDate" type="text" class="form-control dtpick" autocomplete="off" />
                                </div>
                            </div>*@
                        @*<div class="row mt10">
                                <div class="col-sm-3">
                                    <input type="submit" class="btn btn-md btn-warning btn-block" value="Save" />
                                </div>
                                <div class="col-sm-3">
                                    <input type="button" id="butCancel" class="btn btn-md btn-warning btn-block" value="Cancel" />
                                </div>
                            </div>*@
                        <div class="row mt10">
                            <div class="col-sm-4 form-group">
                                <label for="txtInsurerCode">Insurer Code : <span class="mandatory">*</span></label>
                                <input id="txtInsurerCode" name="txtInsurerCode" type="text" class="form-control" required maxlength="5">
                                <input id="hdnIntUserID" name="hdnIntUserID" type="hidden">
                                <input id="hdnInttblmstinsureruserid" name="hdnInttblmstinsureruserid" type="hidden">
                            </div>
                            <div class="col-sm-4 form-group">
                                <label for="txtInsurerRegistrationNumber">Insurer Registration Number : <span class="mandatory">*</span></label>
                                <input id="txtInsurerRegistrationNumber" name="txtInsurerRegistrationNumber" type="text" class="form-control" maxlength="3" required>
                            </div>
                            <div class="col-sm-4 form-group">
                                <label for="cboInsurerType">Insurer Type : <span class="mandatory">*</span></label>
                                <select id="cboInsurerType" name="cboInsurerType" class="form-control">
                                    <option value="">--Select--</option>
                                    <option value="1">General</option>
                                    <option value="2">Life</option>
                                    <option value="3">Health</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mt10">
                            <div class="col-sm-6 form-group">
                                <label for="txtName">Company Name : <span class="mandatory">*</span></label>
                                <input id="txtName" name="txtName" type="text" class="form-control" maxlength="255" required />
                            </div>
                            <div class="col-sm-6 form-group">
                                <label for="txtCDPName">Corporate DP Name : <span class="mandatory">*</span></label>
                                <input id="txtCDPName" name="txtCDPName" type="text" class="form-control" required>
                            </div>
                        </div>
                        <div class="row mt10">
                            <div class="col-sm-4 form-group">
                                <label for="txtAddress1"> Address Line 1: <span class="mandatory">*</span></label>
                                <input id="txtAddress1" name="txtAddress1" type="text" class="form-control" required>
                            </div>
                            <div class="col-sm-4 form-group">
                                <label for="txtAddress2"> Address Line 2: <span class="mandatory">*</span></label>
                                <input id="txtAddress2" name="txtAddress2" type="text" class="form-control" required>
                            </div>
                            <div class="col-sm-4 form-group">
                                <label for="txtAddress3"> Address Line 3: <span class="mandatory">*</span></label>
                                <input id="txtAddress3" name="txtAddress3" type="text" class="form-control" required>
                            </div>
                        </div>
                        <div class="row mt10">
                            <div class="col-sm-4 form-group">
                                <label for="cboStates">State : <span class="mandatory">*</span></label>
                                <select id="cboStates" name="cboStates" class="form-control">
                                    <option value="">-- Select --</option>
                                    @foreach (DataRow dr in PortalApplication.States.Rows)
                                    {
                                        <option value="@dr["state_id"]">@dr["state_name"]</option>
                                    }
                                </select>
                            </div>
                            <div class="col-sm-4 form-group">
                                <label for="cboDistricts">District : <span class="mandatory">*</span></label>
                                <select id="cboDistricts" name="cboDistricts" class="form-control"></select>
                            </div>
                            <div class="col-sm-4">
                                <label for="txtPincode">Pincode : <span class="mandatory">*</span></label>
                                <input id="txtPincode" name="txtPincode" type="text" class="form-control" maxlength="6">
                                <br /><span id="pincodeRange"></span>
                            </div>
                        </div>
                        <div class="row mt10">
                            <div class="col-sm-4 form-group">
                                <label for="txtTelephoneO">Telephone (Office): </label>
                                <input id="txtTelephoneO" name="txtTelephoneO" type="text" class="form-control">
                            </div>
                            <div class="col-sm-4 form-group">
                                <label for="txtTelephoneR">Telephone (Residence) : </label>
                                <input id="txtTelephoneR" name="txtTelephoneR" type="text" class="form-control">
                            </div>
                            <div class="col-sm-4 form-group">
                                <div class="form-group">
                                    <label for="txtFax">Fax : </label>
                                    <input id="txtFax" name="txtFax" type="text" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="row mt10">
                            <div class="col-sm-4 form-group">
                                <div class="form-group">
                                    <label for="txtEmailId">Email ID : <span class="mandatory">*</span></label>
                                    <input id="txtEmailId" name="txtEmailId" type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col-sm-4 form-group">
                                <label for="txtFileSign">Corporate DP Signature : <span class="mandatory">*</span></label><br />
                                <img id="imgFileSign" src="~/Images/Signature.jpg" style="cursor:pointer; width:100px; height:35px; border:2px solid black;" /><br />
                                <input type="file" id="txtFileSign" name="txtFileSign" required style="display:none" />
                                <br /><br /><I>(click on the image to select)</I>
                            </div>
                            <div class="col-sm-4">
                                <div>
                                    <ul>
                                        <li><i>File type : image files (*.jpg / *.jpeg / *.png ).</i></li>
                                        <li><i>Maximum size : 50 kilobytes.</i></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="row mt10">
                            <div class="col-sm-3">
                                <input type="submit" class="btn btn-md btn-warning btn-block" value="Save" />
                            </div>
                            <div class="col-sm-3">
                                <input type="button" id="butCancel" class="btn btn-md btn-warning btn-block" value="Cancel" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="row mt10">
                <div class="col-sm-12">
                    <div id="data" class="table-responsive" style="display:none">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


