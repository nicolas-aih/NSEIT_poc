@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@using System.Data;
@{
    DataTable objDataTableNotification = (DataTable)ViewBag.Notifications;
}
<div id="pnlNotifications" class="notificationBox">
    <h3>Notifications</h3>
    <div class="row">
        <div class="col-sm-12 scrollDiv">
            <ul>
                @foreach (DataRow dr in objDataTableNotification.Rows)
                {
                <li>
                    @*<div>@Convert.ToDateTime(dr["start_date"]).ToString("dd-MMM-yyyy") : @dr["notification_text"]</div>*@
                    <div style="font-weight:600">@dr["notification_caption"]</div>
                    @if (Convert.ToString(dr["notification_text"]) != String.Empty)
                    {
                        <div>@Html.Raw(Convert.ToString(dr["notification_text"]))</div>
                    }
                    @if (dr["attachment"] != DBNull.Value && Convert.ToString(dr["attachment"]) != String.Empty)
                    {
                        <div style="font-style:italic; font-size:smaller; text-align:right"><a href="~/NotificationDocs/@dr["attachment"]" target="_blank">download</a></div>
                    }
                </li>
                }
            </ul>
        </div>
    </div>
</div>