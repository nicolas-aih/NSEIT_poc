<script>
    $(document).ready(function(){
        $("#txtDOB").datepicker({
            showMonthAfterYear: true,
            dateFormat: 'dd-M-yy',
            changeMonth: true,
            changeYear: true,
            yearRange: "c-100:c+0"
        });

        $("#frmMain").validate({
            rules:
            {
                txtURN: {
                    required: true,
                    minlength: 13
                }
            },
            messages:
            {
                txtURN: {
                    required: MandatoryFieldMsg,
                    minlength: "URN should be minimum 13 characters in length"
                }
            }
        });
    });
</script>
<div id="pnlMain" class="notificationBox">
    <h3>Training Registration Form Modification</h3>
    <div class="row">
        <div class="col-sm-12">
            <div class="row mt10">
                <form id="frmMain" method="post" action="">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <input id="txtURN" name="txtURN" type="text" class="form-control" placeholder="URN" required maxlength="14">
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <input type="submit" class="btn btn-md btn-warning btn-block" value="Download">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <H3>This URN modification form goes here...</H3>
        </div>
    </div>
</div>

