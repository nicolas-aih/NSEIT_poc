@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<script>
    $(document).ready(function(){
        $("#txtDOB").datepicker({
            showMonthAfterYear: true,
            dateFormat: 'dd-M-yy',
            changeMonth: true,
            changeYear: true,
            yearRange: "c-100:c+0"
        });

        $("#frmMain").validate({
            rules:
            {
                txtURN: {
                    required: true,
                    minlength: 13,
                    maxlength: 14
                },
                txtDOB: {
                    required: true
                }
            },
            messages:
            {
                txtURN: {
                    required: MandatoryFieldMsg,
                    minlength: "URN should be 13 OR 14 characters in length",
                    maxlength: "URN should be 13 OR 14 characters in length"
                },
                txtDOB: {
                    required: MandatoryFieldMsg
                }
            }
        });
    });
</script>
<div id="pnlMain" class="notificationBox">
    <h3>Download Scorecard</h3>
    <div class="row">
        <div class="col-sm-12">
            <div class="row mt10">
                <form id="frmMain" method="post" action="../Candidates/Scorecard">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <input id="txtURN" name="txtURN" type="text" class="form-control" placeholder="URN" required>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <input id="txtDOB" name="txtDOB" type="text" class="form-control dtpick" placeholder="Date of birth" readonly="readonly" style="cursor:pointer; background-color:white;">
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <input type="submit" class="btn btn-md btn-warning btn-block" value="Download">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>